@model RPA.Models.ViewModel.TopicCreateViewModel

@{
    ViewData["Title"] = "Edit";
}

<section class="content-header">
    <div class="header-icon">
        <i class="fa fa-users"></i>
    </div>
    <div class="header-title">
        <h1>Topic</h1>
        <small>Are you sure you want to Edit this?</small>
    </div>
</section>

<div class="content">
    <div class="row">
        <!-- Form controls -->
        <div class="col-sm-12">
            <div class="card lobicard all_btn_card" id="lobicard-custom-control1" data-sortable="true">
                <div class="card-header all_card_btn">
                    <div class="card-title custom_title">
                        <a asp-action="Index" class="btn btn-add"><i class="fa fa-list"></i> Topic List </a>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" class="col-sm-6">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group" hidden="true">
                            <label asp-for="Topic.Id" class="control-label"></label>
                            <input asp-for="Topic.Id" class="form-control" />
                            <span asp-validation-for="Topic.Id" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Topic.title" class="control-label"></label>
                            <input asp-for="Topic.title" class="form-control" />
                            <span asp-validation-for="Topic.title" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Chapter"></label>
                            <select class="form-control" asp-for="Topic.Chapterid">
                                
                                @foreach (var chapter in Model.Chapter)
                                {
                                    <option value="@chapter.Id">@chapter.title</option>
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
